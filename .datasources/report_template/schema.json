
{
  "version": "2.0",
  "fields": [
    {
      "name": "templateName",
      "type": "string",
      "description": "模板名称",
      "required": true
    },
    {
      "name": "templateType",
      "type": "string",
      "description": "模板类型",
      "required": true,
      "enum": ["daily", "weekly", "monthly", "custom"]
    },
    {
      "name": "contentType",
      "type": "string",
      "description": "内容类型",
      "required": true,
      "enum": ["activity", "donation", "points", "user", "composite"]
    },
    {
      "name": "fields",
      "type": "array",
      "description": "包含字段",
      "items": {
        "type": "string"
      }
    },
    {
      "name": "charts",
      "type": "array",
      "description": "包含图表",
      "items": {
        "type": "string",
        "enum": ["bar", "line", "pie", "table"]
      }
    },
    {
      "name": "format",
      "type": "string",
      "description": "输出格式",
      "enum": ["pdf", "excel", "html", "image"],
      "default": "pdf"
    },
    {
      "name": "status",
      "type": "string",
      "description": "状态",
      "enum": ["active", "inactive"],
      "default": "active"
    },
    {
      "name": "createdAt",
      "type": "timestamp",
      "description": "创建时间",
      "autoGenerate": true
    },
    {
      "name": "updatedAt",
      "type": "timestamp",
      "description": "更新时间",
      "autoGenerate": true
    }
  ],
  "indexes": [
    {
      "name": "templateType_index",
      "fields": ["templateType"]
    }
  ]
}
